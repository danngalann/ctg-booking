{% extends 'base.html.twig' %}
{% block css %}
    {{ parent() }}
    <style>
        .collapsible-header .client-number {
            position: absolute;
            right: 3%;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col s12 m5 offset-m3">
            <h3 class="center-align">Reservas para hoy</h3>
            {%
                include 'backend_home/includes/_booking_collapsible.html.twig' with
                {
                    "bookings": bookings
                }
            %}
        </div>
        <div class="hide-on-small-only col m3 offset-m1">
            <h3 class="center-align">Estad√≠sticas</h3>
            <div class="z-depth-2 valign-wrapper" style="height: 80vh; border-radius: 15px">
                <h4 class="red-text center-align" style="width: 100%">(Panel en progreso)</h4>
            </div>
        </div>
    </div>
{% endblock %}
{% block bodyscripts %}
    {{ parent() }}
    <script>
        {# Init collapsible #}
        $(document).ready(function(){
            $('.collapsible').collapsible();
        });
    </script>
{% endblock %}