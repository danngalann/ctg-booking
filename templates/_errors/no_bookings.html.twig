{% extends 'base.html.twig' %}
{% block title %}Oops..{% endblock %}
{% block css %}
    {{ parent() }}
    <style>
        .picture {
            border-radius: 50%;
            height: 400px;
        }

        .main-container {
            background:linear-gradient(0deg, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url("{{ asset("img/bruce_wallpaper.jpg") }}");
            background-size: cover;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="main-container">
        <div class="valign-wrapper" style="height: 100vh;">
            <div class="container">
                <div class="row">
                    <div class="col s12 m6">
                        <h1 class="white-text">Esta no es la reserva que buscas</h1>
                        <p class="flow-text white-text">No hemos encontrado ninguna reserva para '{{ bookingName }}'</p>
                    </div>
                    <div class="col s12 m6 hide-on-small-only">
                        <div class="center-align">
                            <img class="picture" src="{{ asset('img/404_droids.jpg') }}" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}