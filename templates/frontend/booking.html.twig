{% extends 'base.html.twig' %}

{% block title %}Reservas CTG{% endblock %}
{% block css %}
    {{ parent() }}
    <style>
        .form-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-image: url("{{ asset("img/bruce_wallpaper.jpg") }}");
            background-size: cover;
        }

        .form-container form {
            padding: 1em;            
            width: 100%;
            margin: 0 2em;
            border-radius: 15px;
            background: rgba(255,255,255,.95);
        }

        {# Desktop #}
        @media only screen and (min-width: 992px) {
            .form-container {
                display: flex;
                justify-content: center;
                align-items: center;
            }

            .form-container form {
                padding: 3em;            
                min-width: 40vw;
                width: auto;
            }
        }
    </style>
{% endblock %}
{% block body %}
    <div class="form-container">
        <form class="z-depth-3" action="javascript:void(0);">
            {% if isBookingFull %}
            <h5 class="red-text center-align">No quedan plazas disponibles</h5>
            {% endif %}
            <h5 id="duplicateText" class="red-text center-align" style="display: none">¡Ya tienes una reserva!</h5>
            <div class="row">
                <div class="input-field col s12 l6">
                    <input id="first_name" type="text" class="validate" {% if isBookingFull %}disabled{% endif %}>
                    <label for="first_name">Nombre</label>
                </div>
                <div class="input-field col s12 l6">
                    <input id="last_name" type="text" class="validate" {% if isBookingFull %}disabled{% endif %}>
                    <label for="last_name">Apellidos</label>
                </div>
                <div class="input-field col s12" style="margin-top: 0;">
                    <input id="phone" type="text" class="validate" {% if isBookingFull %}disabled{% endif %}>
                    <label for="phone">Teléfono</label>
                    <span class="helper-text">Sólo se usará para comunicar casos de COVID19</span>
                </div>
            </div>
            <div class="right-align">
                <button id="doBooking" class="btn waves-effect waves-light" type="submit" {% if isBookingFull %}disabled{% endif %}>Resevar
                    <i class="material-icons right">alarm_on</i>
                </button>
                <button id="deleteBooking" class="btn red waves-effect waves-light" type="submit" style="display: none">Eliminar
                    <i class="material-icons right">delete</i>
                </button>
            </div>
        </form>
    </div>
{% endblock %}
{% block bodyscripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            $('input').on('keyup', function () {
                if(allInputsHaveData()){
                    const clientName = $('#first_name').val();
                    const clientSurname = $('#last_name').val();
                    const clientPhone = $('#phone').val();

                    $.ajax({
                        url: '{{ path('frontend_check_booking', {"bookingName": bookingName}) }}',
                        type: 'POST',
                        data: {
                            clientName,
                            clientSurname,
                            clientPhone
                        }
                    }).done(function (isDupe) {
                        if(isDupe) {
                            $('#duplicateText').css("display", "block");
                            $('#doBooking').prop("disabled", true);
                            $('#deleteBooking').css("display", "inline-block");
                        } else {
                            $('#duplicateText').css("display", "none");
                            $('#doBooking').prop("disabled", false);
                            $('#deleteBooking').css("display", "none");
                        }
                    })
                }
            });

            // Submit
            $('#doBooking').click(function () {
                const clientName = $('#first_name').val();
                const clientSurname = $('#last_name').val();
                const clientPhone = $('#phone').val();

                $.ajax({
                    url: '{{ path('frontend_client_book', {"bookingName": bookingName}) }}',
                    type: 'POST',
                    data: {
                        clientName,
                        clientSurname,
                        clientPhone
                    }
                }).done(function (res) {
                    successToast("Reserva completada").then(() => {
                        window.location.href = '{{ path('frontend_client', {"bookingName": bookingName}) }}';
                    });
                }).fail(function (res) {
                    errorToast(res.responseJSON.message);
                })
                ;
            });

            // Delete booking
            $('#deleteBooking').click(function () {
                const clientName = $('#first_name').val();
                const clientSurname = $('#last_name').val();
                const clientPhone = $('#phone').val();

                confirmationToast("¿Seguro que quieres eliminar la reserva?")
                    .then((res) => {
                        if(res.isConfirmed) {
                            $.ajax({
                                url: '{{ path('frontend_delete_booking', {"bookingName": bookingName}) }}',
                                type: 'POST',
                                data: {
                                    clientName,
                                    clientSurname,
                                    clientPhone
                                }
                            }).done(function (res) {
                                successToast("Reserva eliminada")
                                    .then(() => {
                                        window.location.href = '{{ path('frontend_client', {"bookingName": bookingName}) }}';
                                    });
                            }).fail(function (res) {
                                errorToast(res.responseJSON.message);
                            })
                            ;
                        }
                    });
            });
        });
    </script>
    <script>
        function allInputsHaveData(){
            const clientName = $('#first_name').val() !== "";
            const clientSurname = $('#last_name').val() !== "";
            const clientPhone = $('#phone').val() !== "";

            return clientName && clientSurname && clientPhone;
        }
    </script>
{% endblock %}
