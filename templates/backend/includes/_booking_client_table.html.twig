<table>
    <thead>
    <tr>
        <th>Nombre</th>
        <th>Apellidos</th>
        {% if is_granted("ROLE_SUPERADMIN") %}
        <th>Tel√©fono</th>
        {% endif %}
        <th></th>
    </tr>
    </thead>

    <tbody>
    {% for client in clients|sort((a, b) => a.name <=> b.name) %}
        <tr data-client-id="{{ client.id }}">
            <td>{{ client.name }}</td>
            <td>{{ client.surname }}</td>
            {% if is_granted("ROLE_SUPERADMIN") %}
            <td>{{ client.phone }}</td>
            {% endif %}
            <td><i class="material-icons red-text deleteBtn deleteClientBookingBtn">delete</i></td>
        </tr>
    {% endfor %}
    </tbody>
</table>